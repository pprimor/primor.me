{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "types": ["vite/client"],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["app/**/*", "lib/**/*", "App.tsx", "main.tsx"],
  "exclude": ["node_modules", ".next", "out"]
}
